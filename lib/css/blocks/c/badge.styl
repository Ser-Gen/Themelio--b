/*
<span class="Badge"></span>
*/

.Badge,
.BadgeTag,
.BadgeTail,
.BadgeText {
	display: inline-block;
}


/*
<div class="BadgeContainer">
	<span class="Badge BadgeTag sizeS action">
		<span class="BadgeTail"></span><span class="BadgeText">Акция</span>
	</span>
	<span class="Badge BadgeTag sizeS special">
		<span class="BadgeTail"></span><span class="BadgeText">Спец<span class="cork">предложение</span></span>
	</span>
</div>
*/

.BadgeContainer .Badge {
	margin-right: .4em;
}
.BadgeContainer .Badge:last-child {
	margin-right: 0;
}

.BadgeTag {
	cursor: default;
	white-space: nowrap;
}

.BadgeTail {
	/*background: url("/img/zakaz/interface/badge-tag_tails.png") no-repeat;*/
	background: url("data:image/png;base64,") no-repeat;
	vertical-align: bottom;
	white-space: normal;
}

.BadgeText {
	border-radius: .3em;
	line-height: 1;
}
.BadgeTail + .BadgeText {
	border-radius: 0;
	border-top-right-radius: .3em;
	border-bottom-right-radius: .3em;
}

.BadgeTag.outline .BadgeText {
	border: 1px solid;
}
.BadgeTag.outline .BadgeTail + .BadgeText {
	border-left: none;
}

.BadgeTag.action .BadgeText {
	background-color: #d23d3d;
	color: #fff;
}
.BadgeTag.outline.action .BadgeText {
	background-color: transparent;
	color: #d23d3d;
}
.BadgeTag.special .BadgeText {
	background-color: #4f98d6;
	color: #fff;
}
.BadgeTag.novelty .BadgeText {
	background-color: #8ec062;
	color: #fff;
}
.BadgeTag.pricefalling .BadgeText {
	background-color: #f48840;
	color: #fff;
}


.BadgeTag.sizeS .BadgeTail {
	height: 18px;
	width: 9px;
}
.BadgeTag.sizeS.outline .BadgeTail {
	height: 17px;
	width: 11px;
}
.BadgeTag.sizeS .BadgeText {
	font-size: 10px;
	font-weight: bold;
	line-height: 9px;
	padding: 4px 6px 5px 4px;
}
.BadgeTag.sizeS.outline .BadgeText {
	padding-top: 3px;
	padding-bottom: 3px;
}
.BadgeTag.sizeS .BadgeText .cork {
	display: none;
}

.BadgeTag.sizeS.action .BadgeTail {
	background-position: 0 0;
}
.BadgeTag.sizeS.outline.action .BadgeTail {
	background-position: 0 -52px;
}
.BadgeTag.sizeS.special .BadgeTail {
	background-position: -14px 0;
}
.BadgeTag.sizeS.novelty .BadgeTail {
	background-position: -28px 0;
}
.BadgeTag.sizeS.pricefalling .BadgeTail {
	background-position: -42px 0;
}


.BadgeTag.sizeM .BadgeTail {
	height: 24px;
	width: 12px;
}
.BadgeTag.sizeM .BadgeText {
	font-size: 12px;
	font-weight: bold;
	padding: 6px 9px 6px 6px;
}
.BadgeTag.sizeM.outline .BadgeText {
	padding-top: 5px;
	padding-bottom: 5px;
}

.BadgeTag.sizeM.action .BadgeTail {
	background-position: 0 -23px;
}
.BadgeTag.sizeM.outline.action .BadgeTail {
	background-position: 0 -74px;
}
.BadgeTag.sizeM.special .BadgeTail {
	background-position: -17px -23px;
}
.BadgeTag.sizeM.novelty .BadgeTail {
	background-position: -34px -23px;
}
.BadgeTag.sizeM.pricefalling .BadgeTail {
	background-position: -51px -23px;
}


.BadgeTag.sizeL .BadgeTail {
	height: 24px;
	width: 12px;
}
.BadgeTag.sizeL .BadgeText {
	font-size: 18px;
	font-weight: normal;
	padding: 2px 8px 4px 5px;
}
.BadgeTag.sizeL.outline .BadgeText {
	padding-top: 1px;
	padding-bottom: 3px;
}

.BadgeTag.sizeL.action .BadgeTail {
	background-position: 0 -23px;
}
.BadgeTag.sizeL.outline.action .BadgeTail {
	background-position: 0 -74px;
}


/*
<a href="#" class="Badge BadgeOutline planet">ОП</a>
*/

.BadgeOutline {
	border: 1px solid;
	border-radius: .3em;
	color: #444;
	cursor: default;
	display: inline-block;
	font-size: 8px;
	font-weight: bold;
	line-height: 8px;
	padding: 2px 4px;
	text-decoration: none;
}
a.BadgeOutline {
	cursor: pointer;
}

.BadgeOutline.planet {
	color: #d23d3d;
}
.BadgeOutline.zakaz {
	color: #2095ca;
}

.BadgeOutline.giftCount {
	color: #429600;
	font-size: 10px;
	line-height: 9px;
	padding: 3px 5px;
}



/* Если бирка с выпадающим при наведении блоком — она должна становиться прозрачней и иметь вопрошающий курсор */

.BadgeTag.Bubble.onHover .BadgeTail,
.BadgeTag.Bubble.onHover .BadgeText {
	transition: opacity .1s ease-in-out;
}
.BadgeTag.Bubble.onHover:hover .BadgeTail,
.BadgeTag.Bubble.onHover:hover .BadgeText {
	cursor: help;
	opacity: .75;
}


.BadgeTag .BubbleContent {
	white-space: normal;
}
