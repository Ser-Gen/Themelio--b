$iconsPath = $iconsPath is defined ? $iconsPath : '/assets/img/interface/ui.png?v=1';

.Icon {
	@extend .v-a-m-true;
	background: url($iconsPath) -9999px -9999px no-repeat;
	display: inline-block;
	
	a& {
		text-decoration: none;
	}
	a &,
	.withIcon & {
		margin-right: .4em;
	}
}
